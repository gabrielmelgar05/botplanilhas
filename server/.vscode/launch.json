{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch FastAPI (server)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--port", "8000"],
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    {
      "name": "Next.js dev (web)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/web",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Server + Web",
      "configurations": ["Launch FastAPI (server)", "Next.js dev (web)"]
    }
  ]
}
